public class DownwardRightTriangle {
    public static void makeDownwardRightTriangle(int w) {
        if (w <= 0) {
            System.out.println("w must be a positive integer.");
            return;
        }

        for (int i = w; i >= 1; i--) {
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println(); // Move to the next line after each row
        }
    }

    public static void main(String[] args) {
        int w = 4; // Width of the triangle
        makeDownwardRightTriangle(w);
    }
}
